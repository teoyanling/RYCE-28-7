<div class="container mt-3">
	<div class="card card-body">
		<h3>Edit Order {{carOrders.carOrderId}} of User {{carOrders.userId}}</h3>
		<form action="" method="post" class="needs-validation" novalidate>
			<div class="form-group">
				{{!-- Practical 5 Exercise 2: Add a title input text here named 'title'--}}
			</div>

			<div class="form-group">
				<div class="row ">
					<div class="col-12 col-sm-12 col-md-12 col-lg-3 ">
						<label class="font-italic">Order Date</label>
						<input id="datepicker" width="200" name="orderDate"
							value="{{formatDate carOrders.orderDate 'DD/MM/YYYY'}}" readonly />
					</div>
					<div class="col-12 col-sm-12 col-md-12 col-lg-3 ">
						<label class="font-italic">Customer ID</label>
						<input type="text" class="form-control" id="userId" name="userId"
							placeholder="{{carOrders.userId}}" readonly>
						<br>  
					</div>

					<div class="col-12 col-sm-12 col-md-12 col-lg-3 ">
						<label class="font-italic">Order ID</label>
						<input type="text" class="form-control" id="orderId" name="orderId"
							value="{{carOrders.carOrderId}}" >
						<br>
					</div>
				</div>
			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-12 col-sm-12 col-md-6 col-lg-6">
						<label class="font-italic">Car ID</label>
						<br>
						<div>
							<input type="number" class="form-control" id="carId" name="carId"
								value="{{carOrders.carId}}">
						</div>
					</div>

					<div class="col-12 col-sm-12 col-md-6 col-lg-6">
						<label class="font-italic" for="status">Delivery Status</label>
						<br>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="deliveryStatus" id="statusPending"
								value="Pending" {{checkboxCheck carOrders.deliveryStatus "Pending" }}
								onclick="ensureOneCheck('deliveryStatus', 'deliveryStatusErr', 'btnSubmit')">
							<label class="form-check-label" for="pending">Pending</label>
						</div>
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" name="deliveryStatus" id="statusDelivered"
								value="Delivered" {{checkboxCheck carOrders.deliveryStatus "Delivered" }}
								onclick="ensureOneCheck('deliveryStatus', 'deliveryStatusErr', 'btnSubmit')">
							<label class="form-check-label" for="delivered">Delivered</label>
						</div>
					</div>
				</div>

			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-12 col-sm-12 col-md-6 col-lg-6">
						<label class="font-italic">Car Name</label>
						<br>
						<div>
							<input type="text" class="form-control" id="carName" name="carName"
								value="{{carOrders.carName}}">
						</div>
					</div>

					<div class="col-12 col-sm-12 col-md-6 col-lg-6">
						<label class="font-italic">Quantity</label>
						<br>
						<div>
							<input type="number" class="form-control" id="quantity" name="quantity" step="1" min="1"
								value="{{carOrders.quantity}}">
						</div>
					</div>
				</div>

			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-12 col-sm-12 col-md-6 col-lg-6">
						<label class="font-italic">Unit Price</label>
						<br>
						<div>
							<input type="number" class="form-control" id="unitPrice" name="unitPrice" min="0.00"
								max="10000.00" step="0.01" value="{{carOrders.unitPrice}}">
						</div>
					</div>

					<div class="col-12 col-sm-12 col-md-6 col-lg-6">
						<label class="font-italic">Amount</label>
						<br>
						<div>
							<input type="number" class="form-control" id="amount" name="amount" min="0.00"
								max="10000.00" step="0.01" value="{{carOrders.amount}}">
						</div>
					</div>
				</div>

			</div>

			<div class="form-group mb-4">
				<label for="inputAddress">Address</label>
				<input type="text" class="form-control" id="address" name="address" value="{{carOrders.address}}">
			</div>

			<div class="form-group">
				<div class="row">
					<div class="col-12 col-sm-12 col-md-6 col-lg-6">
						<label class="font-italic">Postal Code</label>
						<br>
						<div>
							<input type="text" class="form-control" id="postalCode" name="postalCode"
								value="{{carOrders.postalCode}}">
						</div>
					</div>

					<div class="col-12 col-sm-12 col-md-6 col-lg-6">
						<label class="font-italic">Unit Number</label>
						<br>
						<div>
							<input type="text" class="form-control" id="unitNumber" name="unitNumber"
								value="{{carOrders.unitNumber}}">
						</div>
					</div>
				</div>

			</div>

			<div class="form-group mb-4">
				<label class="font-italic" for="notes">Extra Notes</label>
				<textarea class="form-control" id="notes" name="notes" rows="7"
					maxlength="2000">{{carOrders.notes}}</textarea>
			</div>
			<br>
			<button id="btnSubmit" type="submit" class="btn btn-primary">Save
			</button>
		</form>
	</div>
</div>

<script>
	$('#datepicker').datepicker({
		format: 'dd/mm/yyyy',
		uiLibrary: 'bootstrap4',
		value: moment().format('DD/MM/YYYY'),
	});

	// Example starter JavaScript for disabling form submissions if there are invalid fields
	(function () {
		'use strict'

		// Fetch all the forms we want to apply custom Bootstrap validation styles to
		var forms = document.querySelectorAll('.needs-validation')

		// Loop over them and prevent submission
		Array.prototype.slice.call(forms)
			.forEach(function (form) {
				form.addEventListener('submit', function (event) {
					if (!form.checkValidity()) {
						event.preventDefault()
						event.stopPropagation()
					}

					form.classList.add('was-validated')
				}, false)
			})
	})()
</script>