<div class="container bg-color mt-3">
    <form method="post" action="">
        <div class="row">
            <div class="col-md-4 p-4 bg-white">
                <div class="profile-img">
                    <a href="{{imgURL}}" data-title="{{title}}" data-toggle="lightbox">
                        <img src="{{user.imgURL}}" alt="Poster" class="img-thumbnail img-fluid mb-2"
                            onerror="this.src='/img/no-image.jpg'">
                    </a>

                </div>
                <br>
                <h3 class="text-dark">Welcome back, <br>
                    {{user.firstname}} {{user.lastname}} !
                </h3>
                <nav class="navbar navbar-light navbar-expand-sm px-0 flex-row flex-nowrap">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarWEX"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse" id="navbarWEX">
                        <div class="nav flex-sm-column flex-row">
                            <h4>
                                <a class="nav-item nav-link text-dark" href="/user/profile">Profile</a>
                                <a href="/user/changepwd/{{user.id}}" class="nav-item nav-link text-dark">Change
                                    Password</a>
                                <a href="/user/addressList" class="nav-item nav-link actives">Address</a>
                                <a href="/user/paymentMethod" class="nav-item nav-link text-dark">Payment Method</a>
                                {{#if user}}
                                {{#checkCustomer user.dataValues.role}}
                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link text-dark dropdown-toggle" data-toggle="dropdown"
                                        id="navbarDropdownMenuLink">My Booking</a>
                                    <div class="dropdown-menu">
                                        <a href="/user/testDrivehistory" class="dropdown-item">Test Drive</a>
                                        <a href="/user/servicingHistory" class="dropdown-item">Servicing</a>
                                    </div>
                                </div>
                                <a href="/user/ordersHistory" class="nav-item nav-link text-dark">Orders</a>
                                {{/checkCustomer}}
                                {{/if}}
                            </h4>
                        </div>
                    </div>
                </nav>
            </div>
            <div class="col-md-6 p-4">
                <h2>Edit Address</h2>
                <div class="form-group">
                    <label for="firstname">First Name</label>
                    <input type="text" class="form-control" name="firstname" value="{{addresses.firstname}}" required>
                </div>
                <div class="form-group">
                    <label for="lastname">Last Name</label>
                    <input type="text" class="form-control" name="lastname" value="{{addresses.lastname}}" required>
                </div>
                <div class="form-group">
                    <label for="phone">Phone</label>
                    <input type="text" class="form-control" name="phone" value="{{addresses.phone}}" required>
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text" class="form-control" name="address" value="{{addresses.address}}" required>
                </div>
                <div class="form-group">
                    <label for="unitnumber">Unit Number</label>
                    <input type="text" class="form-control" name="unitnumber" value="{{addresses.unitnumber}}" required>
                </div>
                <div class="form-group">
                    <label for="postalcode">Postal Code</label>
                    <input type="text" class="form-control" name="postalcode" value="{{addresses.postalcode}}" required>
                </div>
                <br>
                <div>

                    <a href="/user/addressList" class="btn btn-light rounded-lg ">Cancel</a>
                    <button id="btnSubmit" type="submit" class="btn btn-dark rounded-lg">Save
                    </button>
                </div>
            </div>
        </div>


    </form>
</div>
<style>
    .btn-dark {
        background-color: black;
        border: none;
        color: white;
    }

    .btn-dark:hover {
        background-color: white;
        border: none;
        color: black;
    }

    .a,
    .btn-light {
        background-color: white;
        border: none;
        color: #8B0000;
    }

    .a,
    .btn-light:hover {
        background-color: white;
        border: none;
        color: #8B0000;
    }
</style>