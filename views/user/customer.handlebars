<div class="container mt-3">
    <h1 class="text-white">Users Management</h1>
    <a href="/user/createUser" class="btn rounded-lg ">Add New</a>
    <br><br>
    <div>
        <ul class="nav nav-pills tab">
            <li class="nav-item">
                <a class="nav-link tablinks" href="/user/listuser">All</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/user/customer">Customer</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/user/staff">Staff</a>
            </li>
        </ul>
    </div>
    <div>
        <table class="table tab">
            <thead>
                <tr>

                    <th>Customer ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Action</th>
                </tr>
            </thead>
            {{#if customer}}
            <tbody>
                {{#each customer}}
                <tr>
                    <td class="align-middle">{{[user.id]}}</td>
                    <td class="align-middle">{{[user.firstname]}}</td>
                    <td class="align-middle">{{[user.lastname]}}</td>
                    <td class="align-middle">{{[user.email]}}</td>
                    <td class="align-middle">{{role}}</td>

                    <td>
                        <a href="/user/editUser/{{[user.id]}}">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                    </td>

                </tr>
                {{/each}}
                {{else}}
                <tr>
                    <td>
                        <h3>No user</h3>
                    </td>
                </tr>
            </tbody>
            {{/if}}


        </table>
    </div>
</div>
<style>
    h3,
    h2 {
        font-family: Georgia, 'Times New Roman', Times, serif;
        color: #8B0000;
    }

 
</style>

<script>
    $('[data-toggle=confirmation]').confirmation({
        rootSelector: '[data-toggle=confirmation]',
    });
</script>